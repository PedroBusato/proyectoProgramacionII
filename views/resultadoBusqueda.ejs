<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head") %>

<body>
    <%- include("./partials/header") %>
    <main>
        <div class="uk-section uk-section-small">
            
            <% if(posts.length == 0 && users.length == 0){ %>
                <div id="contact">  
                    <a href="/"> <h1>No se encontraron resultados para tu busqueda</h1> </a>
                </div>
            <% } else{ %>
                    <h1 class="h1-posts"> Resultado posteos: </h1>
                    <div class="parent-container-posts">
                        <% for( let i = 0; i < posts.length; i++ ) { %>
                            <div class="results-searchUser" id="contact">
                                <div class="column1-results">
                                    <a href="/profile/userDetail/<%= posts[i].userName %>"> <img src="<%= posts[i].user.profilePic %>" class="profilePic"> </a>
                                    <a href="/profile/userDetail/<%= posts[i].userName %>"> <h1> <%= posts[i].userName %> </h1> </a>
                                    <a href="/profile/userDetail/<%= posts[i].userName %>" class="btn btn-primary">Ver Perfil</a>
                                </div>
            
                                <div class="column2-results">
                                    <a href="/post/detailPost/<%= posts[i].idPost %>"> <img src="<%= posts[i].image %>" class="postPic" > </a>
                                    <p> <%= posts[i].postDescription %> </p>
                                </div>
                            </div>
                        <% } %>
                    </div>

                    <h1 class="h1-users"> Resultados usuarios: </h1>
                    <div class="parent-container-users">
                        <% for( let i = 0; i < users.length; i++ ) { %>
                            <div class="results-searchUser" id="contact">
                                <div class="column1-results-users">
                                    <a href="/profile/userDetail/<%= users[i].userName %>"> <img src="<%= users[i].profilePic %>" class="profilePic"> </a>
                                    <a href="/profile/userDetail/<%= users[i].userName %>"> <h1> <%= users[i].userName %> </h1> </a>
                                    <a href="/profile/userDetail/<%= users[i].userName %>" class="btn btn-primary">Ver Perfil</a>
                                </div>
                            </div>
                        <% } %>
                    </div>
            <% } %>
        </div>
    </main>

    <%- include("./partials/footer") %>

</body>

</html>